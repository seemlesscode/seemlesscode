---
import BaseLayout from '@/layouts/BaseLayout.astro';
import LangSwitcher from '@/components/LangSwitcher';
import ThemeSwitcher from "@/components/ThemeSwitcher";
import { settingsData } from './data/settings.astro';

const { title, description, lang, alternates } = settingsData
---

<BaseLayout title={title} description={description} lang={lang} alternates={alternates}>
  <h1>{title}</h1>
  <ul>
    <LangSwitcher client:load />
    <ThemeSwitcher client:load labels={{ theme: "Theme", color: "Color", light: "Light", dark: "Dark" }}/>
  </ul>

</BaseLayout>
