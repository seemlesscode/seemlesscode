---
import LanguageSwitcher from "@/components/LanguageSwitcher.astro";

interface Props {
  lang: "en" | "fr";
  alternates: Record<string, string>;
  activePage?: string;
}
const { lang, alternates, activePage = "" }: Props = Astro.props;
---

<header class="header">
  <div class="site-title">Seemless Code</div>
  <LanguageSwitcher lang={lang} alternates={alternates} />
</header>
