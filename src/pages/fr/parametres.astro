---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { settingsData } from './data/settings.astro';

const { title, description, lang, alternates } = settingsData
---

<BaseLayout title={title} description={description} lang={lang} alternates={alternates}>
  <h1>{title}</h1>
  <ul>
    <li>
      Langue:
      <a
        href="/fr/parametres"
        class={lang === "fr" ? "lang-active" : "lang-inactive"}
      >Fr</a>
      /
      <a
        href="/en/settings"
        class={lang === "en" ? "lang-active" : "lang-inactive"}
      >En</a>
    </li>
