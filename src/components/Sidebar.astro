---
interface Props {
  lang?: "en" | "fr";
  activePage?: string;
}

const {
  lang = "en",
  activePage = "",
}: Props = Astro.props;

const t = {
  en: {
    site: {
      home: "Home",
      about: "About",
    },
    kallosophia: {
      title: "Kallosophia",
      overview: "Overview",
      ai: "AI & Transparency",
      concept: "Concept",
      project: "Project Management",
      design: "Design",
      dev: "Development",
      devIndex: "Overview",
      api: "API",
      front: "Frontend",
      deploy: "Deployment",
    },
  },
  fr: {
    site: {
      home: "Accueil",
      about: "À propos",
    },
    kallosophia: {
      title: "Kallosophia",
      overview: "Présentation",
      ai: "IA & transparence",
      concept: "Concept",
      project: "Gestion de projet",
      design: "Design",
      dev: "Développement",
      devIndex: "Vue d'ensemble",
      api: "API",
      front: "Frontend",
      deploy: "Déploiement",
    },
  },
}[lang];

const base = `/${lang}`;
const path = (sub: string) => `${base}${sub}`;
---

<aside class="sidebar">
  <nav>
    <ul>
      <li><a href={path("/")} class={`nav-link ${activePage === "home" ? "active" : ""}`}>{t.site.home}</a></li>
      <li><a href={path("/about")} class={`nav-link ${activePage === "about" ? "active" : ""}`}>{t.site.about}</a></li>

      <li class="nav-section">{t.kallosophia.title}</li>
      <li class="nav-subsection"><a href={path("/kallosophia")} class={`nav-link ${activePage === "kallosophia/index" ? "active" : ""}`}>{t.kallosophia.overview}</a></li>
      <li class="nav-subsection"><a href={path("/kallosophia/ai")} class={`nav-link ${activePage === "kallosophia/ai" ? "active" : ""}`}>{t.kallosophia.ai}</a></li>
      <li class="nav-subsection"><a href={path("/kallosophia/concept")} class={`nav-link ${activePage === "kallosophia/concept" ? "active" : ""}`}>{t.kallosophia.concept}</a></li>
      <li class="nav-subsection"><a href={path("/kallosophia/project-management")} class={`nav-link ${activePage === "kallosophia/project-management" ? "active" : ""}`}>{t.kallosophia.project}</a></li>
      <li class="nav-subsection"><a href={path("/kallosophia/design")} class={`nav-link ${activePage === "kallosophia/design" ? "active" : ""}`}>{t.kallosophia.design}</a></li>

      <li class="nav-subsection nav-section">{t.kallosophia.dev}</li>
      <li class="nav-subsubsection"><a href={path("/kallosophia/dev")} class={`nav-link ${activePage === "kallosophia/dev/index" ? "active" : ""}`}>{t.kallosophia.devIndex}</a></li>
      <li class="nav-subsubsection"><a href={path("/kallosophia/dev/api")} class={`nav-link ${activePage === "kallosophia/dev/api" ? "active" : ""}`}>{t.kallosophia.api}</a></li>
      <li class="nav-subsubsection"><a href={path("/kallosophia/dev/front")} class={`nav-link ${activePage === "kallosophia/dev/front" ? "active" : ""}`}>{t.kallosophia.front}</a></li>
      <li class="nav-subsubsection"><a href={path("/kallosophia/dev/deploy")} class={`nav-link ${activePage === "kallosophia/dev/deploy" ? "active" : ""}`}>{t.kallosophia.deploy}</a></li>
    </ul>
  </nav>
</aside>
