---
import PageLayout from '@/layouts/PageLayout.astro';
import LangSwitcher from '@/components/LangSwitcher';
import ThemeSwitcher from "@/components/ThemeSwitcher";
import { settings } from './data/settings.astro';
import type { PageDataType } from '@/types/page';

const { title, description, lang, alternates } = settings.data as PageDataType
---

<PageLayout {title} {description} {lang} {alternates}>
  <h1>{title}</h1>
  <ul>
    <LangSwitcher {alternates} client:load />
    <ThemeSwitcher client:load labels={{ theme: "Theme", color: "Color", light: "Light", dark: "Dark" }}/>
  </ul>

</PageLayout>
