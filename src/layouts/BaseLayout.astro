---
import Header from '@/components/Header.astro';
import Sidebar from '@/components/Sidebar.astro';
import SEO from '@/components/SEO.astro';

interface Props {
  lang?: "en" | "fr";
  title?: string;
  description?: string;
  activePage?: string;
  alternates?: Record<string, string>;
}

const {
  lang = "en",
  title = "Seemless Code",
  description = "",
  activePage = "",
  alternates = {}
}: Props = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <SEO {title} {description} {lang} {alternates} />
  </head>
  <body style="margin: 0; font-family: var(--font-body); background: var(--color-bg); color: var(--color-text);">
    <Header lang={lang} alternates={alternates} />
    <div style="display: flex; min-height: calc(100vh - 60px);">
      <Sidebar lang={lang} activePage={activePage} />
      <main style="flex: 1; padding: 2rem;">
        <slot />
      </main>
    </div>
  </body>
</html>
