---
import Sidebar from '@/components/Sidebar.astro'

// Props optionnelles
const {
  title = "Page",
  description = "",
  activePage = ""
} = Astro.props;
import SEO from '@/components/SEO.astro'
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <SEO title={title} description={description} />
  </head>
  <body style="display: flex; min-height: 100vh; font-family: var(--font-body); background: var(--color-bg); color: var(--color-text);">
    <Sidebar activePage={activePage} />
    <main style="flex: 1; padding: 2rem;">
      <slot />
    </main>
  </body>
</html>
